<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="25"
      style="-fx-background-color: linear-gradient(to bottom, #F9FAFC, #E8F1F8);
             -fx-padding: 30;
             -fx-border-color: #1A508B;
             -fx-border-width: 2;
             -fx-border-radius: 15;
             -fx-background-radius: 15;
             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0.1, 0, 5);"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.novasoftware.tools.infrastructure.http.controller.auth.LoginController">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Bem-vindo!" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #1A508B;" />
        <Label text="Acesse sua conta para continuar." style="-fx-font-size: 14px; -fx-text-fill: #6C757D;" />
    </VBox>

    <!-- Input Fields -->
    <VBox alignment="CENTER" spacing="20">
        <MFXTextField fx:id="usernameField" prefHeight="50.0" prefWidth="320.0"
                      promptText="E-mail"
                      floatingText="E-mail"
                      style="-fx-font-size: 14px;
                             -fx-border-radius: 10px;
                             -fx-background-radius: 10px;
                             -fx-border-color: #1A508B;
                             -fx-background-color: #FFFFFF;
                             -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.05), 5, 0.2, 0, 2);" />
        <MFXPasswordField fx:id="passwordField" prefHeight="50.0" prefWidth="320.0"
                          promptText="Senha"
                          floatingText="Senha"
                          style="-fx-font-size: 14px;
                                 -fx-border-radius: 10px;
                                 -fx-background-radius: 10px;
                                 -fx-border-color: #1A508B;
                                 -fx-background-color: #FFFFFF;
                                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.05), 5, 0.2, 0, 2);" />
    </VBox>

    <!-- Login Button -->
    <MFXButton onAction="#handleLogin" prefHeight="50.0" prefWidth="200.0"
               text="Entrar"
               style="-fx-font-size: 16px;
                      -fx-background-color: linear-gradient(to right, #1A508B, #1F6DA8);
                      -fx-text-fill: white;
                      -fx-border-radius: 25px;
                      -fx-background-radius: 25px;
                      -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0.2, 0, 5);" />

    <!-- Links -->
    <VBox alignment="CENTER" spacing="10">
        <Label onMouseClicked="#handleForgotPassword" text="Esqueceu sua senha?"
               style="-fx-font-size: 12px; -fx-text-fill: #1A508B; -fx-cursor: hand;" />
        <HBox alignment="CENTER" spacing="5">
            <Label text="Não possui uma conta?" style="-fx-font-size: 12px; -fx-text-fill: #6C757D;" />
            <Label onMouseClicked="#handleSignUp" text="Cadastre-se aqui"
                   style="-fx-font-size: 12px; -fx-text-fill: #1A508B; -fx-font-weight: bold; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <!-- Footer -->
    <Label text="© 2024 Novo Software - Todos os direitos reservados."
           style="-fx-font-size: 10px; -fx-text-fill: #B0BEC5;" />
</VBox>
