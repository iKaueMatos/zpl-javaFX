<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXProgressSpinner?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.novasoftware.shared.loading.LoadingScreenController"
           style="-fx-background-color: linear-gradient(to bottom, #212121, #424242); -fx-alignment: center;">
    <VBox spacing="30" style="-fx-alignment: center;">
        <MFXProgressSpinner fx:id="progressIndicator"
                            style="-fx-stroke-width: 6; -fx-fill: transparent; -fx-stroke: linear-gradient(to right, #ff9800, #ff5722);"/>

        <Label fx:id="loadingMessage" text="Carregando, por favor aguarde..."
               style="-fx-text-fill: linear-gradient(to right, #ffffff, #bdbdbd); -fx-font-size: 18px; -fx-font-family: 'Roboto'; -fx-font-weight: bold;">
            <effect>
            </effect>
        </Label>
    </VBox>
</StackPane>
