<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zpl.zpl.view.StartupView" spacing="20" styleClass="container" style="-fx-alignment: center; -fx-background-color: linear-gradient(to bottom, #f0f4f8, #d9e2ec);">
    <children>
        <Label text="Bem-vindo ao Gerador de Etiquetas ZPL" styleClass="h1" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
        <Label text="Simplifique a criação de etiquetas com facilidade e eficiência." styleClass="subtitle" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d; -fx-padding: 0 20 0 20; -fx-text-alignment: center;" />
        <Button text="Iniciar" onAction="#startApplication" styleClass="btn btn-primary" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8px; -fx-padding: 10 20;" />
    </children>
    <padding>
        <Insets top="100" right="50" bottom="100" left="50" />
    </padding>
</VBox>
