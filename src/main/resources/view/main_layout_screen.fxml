<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.novasoftware.tools.ui.view.MainLayoutView">
    <top>
        <HBox fx:id="titleBar" spacing="10" style="-fx-background-color: linear-gradient(to right, #1A508B, #154A77); -fx-padding: 10; -fx-alignment: center-left; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0.2, 0, 4);">
            <Label fx:id="menuButton" text="☰" style="-fx-font-size: 20px; -fx-text-fill: #FFA500; -fx-cursor: hand;" onMouseClicked="#handleMenuButton" />
            <Label text="Menu de Ferramentas - Nova Software" style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" />
            <HBox style="-fx-alignment: center-right;" HBox.hgrow="ALWAYS">
                <Label fx:id="minimizeLabel" text="-" style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF; -fx-cursor: hand; -fx-padding: 0 10 0 0;" />
                <Label fx:id="maximizeLabel" text="☐" style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF; -fx-cursor: hand; -fx-padding: 0 10 0 0;" />
                <Label fx:id="closeLabel" text="✖" style="-fx-font-size: 18px; -fx-text-fill: #FFFFFF; -fx-cursor: hand; -fx-padding: 0 10 0 0;" />
            </HBox>
        </HBox>
    </top>

    <left>
        <VBox fx:id="menuPane" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #1A508B, #154A77); -fx-pref-width: 260; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0.2, 2, 4);">
            <Label text="N" style="-fx-font-size: 50px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-alignment: center;" />

            <MFXButton text="Início" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-alignment: center-left; -fx-cursor: hand; -fx-padding: 10 0;" onAction="#loadGenerateZPL" />
            <MFXButton text="Configurações" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-alignment: center-left; -fx-cursor: hand; -fx-padding: 10 0;" onAction="#loadConfig" />
            <MFXButton text="Importar Dados" style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 16px; -fx-alignment: center-left; -fx-cursor: hand; -fx-padding: 10 0;" onAction="#loadImport" />

            <VBox style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" />
            <MFXButton text="Sair" style="-fx-background-color: transparent; -fx-text-fill: #FF5252; -fx-font-size: 16px; -fx-alignment: center-left; -fx-cursor: hand; -fx-padding: 10 0;" />
            <Label text="Nova Software Hub" style="-fx-text-fill: #B3E5FC; -fx-font-size: 12px;" />
            <Label text="© 2023 Powered by Nova Software" style="-fx-text-fill: #B3E5FC; -fx-font-size: 12px;" />
        </VBox>
    </left>

    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <VBox fx:id="contentPane" style="-fx-background-color: #F9F9F9; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0.1, 0, 4); -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 5;" />
        </ScrollPane>
    </center>
</BorderPane>
