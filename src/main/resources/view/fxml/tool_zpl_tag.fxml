<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.novasoftware.tools.infrastructure.http.controller.tools.ToolsTagController">
    <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff;" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" stylesheets="@../css/tool-zpl.css">
        <children>
            <Label text="Gerador de Etiquetas ZPL" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" />

            <VBox spacing="15">
                <children>
                    <Label text="Dados da Etiqueta" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #F97316;" />
                    <HBox spacing="24">
                        <children>
                            <MFXTextField fx:id="eanField" floatMode="BORDER" floatingText="Digite o EAN" prefWidth="250"
                                          style="-fx-border-color: #F97316; -fx-border-width: 1px; -fx-background-color: transparent; -fx-effect: none;" />
                            <MFXTextField fx:id="skuField" floatMode="BORDER" floatingText="Digite o SKU" prefWidth="250"
                                          style="-fx-border-color: #F97316; -fx-border-width: 1px; -fx-background-color: transparent; -fx-effect: none;" />
                            <MFXTextField fx:id="quantityField" floatMode="BORDER" floatingText="Digite a quantidade por linha" prefWidth="250"
                                          style="-fx-border-color: #F97316; -fx-border-width: 1px; -fx-background-color: transparent; -fx-effect: none;" />
                        </children>
                    </HBox>
                </children>
            </VBox>

            <VBox spacing="15">
                <children>
                    <Label text="Configuração da Etiqueta" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #F97316;" />
                    <HBox spacing="20">
                        <children>
                            <MFXComboBox fx:id="formatFieldComboBox" promptText="Formato da Etiqueta" prefWidth="250"
                                         style="-fx-border-color: #F97316; -fx-border-width: 1px; -fx-background-color: transparent; -fx-effect: none;" />
                            <MFXComboBox fx:id="labelTypeComboBox" promptText="Tipo de Etiqueta" prefWidth="250"
                                         style="-fx-border-color: #F97316; -fx-border-width: 1px; -fx-background-color: transparent; -fx-effect: none;" />
                        </children>
                    </HBox>
                </children>
            </VBox>

            <HBox spacing="15" alignment="CENTER">
                <children>
                    <MFXButton fx:id="generateButton" text="Gerar Etiqueta" prefWidth="150"
                               onAction="#generateLabel" style="-fx-background-color: #F97316; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <MFXButton fx:id="clearButton" text="Limpar" prefWidth="150"
                               onAction="#clearFields" style="-fx-background-color: #333333; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <MFXButton fx:id="printButton" text="Imprimir" prefWidth="150"
                               onAction="#printLabel" style="-fx-background-color: #FF9800; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: bold;" />
                    <MFXButton fx:id="saveButton" text="Salvar ZPL" prefWidth="150"
                               onAction="#saveZplToFile" style="-fx-background-color: #2196F3; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: bold;" />
                </children>
            </HBox>

            <VBox spacing="15">
                <children>
                    <Label text="ZPL Gerado" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #F97316;" />
                    <TextArea fx:id="outputArea" promptText="O ZPL gerado aparecerá aqui" prefHeight="300" prefWidth="800"
                              style="-fx-border-color: #CCCCCC; -fx-border-width: 1px; -fx-background-color: #F9F9F9; -fx-effect: none;" />
                </children>
            </VBox>
        </children>
    </VBox>
</AnchorPane>
