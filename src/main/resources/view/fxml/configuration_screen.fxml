<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.novasoftware.tools.infrastructure.http.controller.config.ConfigPrinterController">
    <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
        <Label text="Configurações Globais" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label text="As configurações alteradas serão gravadas automaticamente" style="-fx-font-size: 12px; -fx-text-fill: #666;" />

        <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: #ddd; -fx-border-width: 1;">
            <Label text="Configurações de Impressão" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <Label text="Impressora padrão para etiquetas (ZPL):" style="-fx-font-size: 14px;" />
            <ComboBox fx:id="zplPrinterComboBox" style="-fx-font-size: 14px;" />

            <Label text="Impressora padrão para (Modelo A4):" style="-fx-font-size: 14px;" />
            <ComboBox fx:id="danfePrinterComboBox" style="-fx-font-size: 14px;" />
        </VBox>
    </VBox>
</StackPane>
