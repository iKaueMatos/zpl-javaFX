<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20" style="-fx-background-color: #ffffff; -fx-padding: 30; -fx-border-color: #1A508B; -fx-border-width: 2; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.novasoftware.user.infrastructure.http.controller.auth.LoginController">

    <Label text="Bem-vindo ao Novo Software!" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1A508B;" />
    <Label text="Faça login para acessar seus resultados." style="-fx-font-size: 14px; -fx-text-fill: #555555;" />

    <MFXTextField fx:id="usernameField" prefHeight="40.0" prefWidth="300.0" promptText="E-mail"
                  style="-fx-font-size: 14px; -fx-border-color: #1A508B; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <MFXPasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="300.0" promptText="Senha"
                      style="-fx-font-size: 14px; -fx-border-color: #1A508B; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <MFXButton onAction="#handleLogin" prefHeight="40.0" prefWidth="150.0" text="Entrar"
               style="-fx-font-size: 16px; -fx-background-color: #1A508B; -fx-text-fill: white; -fx-border-radius: 5px;" />

    <HBox alignment="CENTER" spacing="5">
        <Label onMouseClicked="#handleForgotPassword" text="Esqueceu sua senha?"
               style="-fx-font-size: 12px; -fx-text-fill: #1A508B; -fx-cursor: hand;" />
    </HBox>

    <Label text="Não possui uma conta?" style="-fx-font-size: 12px; -fx-text-fill: #555555;" />
    <Label onMouseClicked="#handleSignUp" text="Cadastre-se aqui"
           style="-fx-font-size: 12px; -fx-text-fill: #1A508B; -fx-cursor: hand;" />
</VBox>
